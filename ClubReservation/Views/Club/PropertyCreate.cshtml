@model ClubReservation.Models.Property
@{
    ViewBag.Title = "俱乐部资产新建";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var club = ViewBag.Club;
}
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src="@Url.Content("~/Scripts/pagejs/club.js")"></script>
}

<div class="page-header position-relative">
    <h1>俱乐部管理<small><i class="icon-double-angle-right"></i>@(club.ClubName)&nbsp;&nbsp;俱乐部资产新建</small></h1>
</div><!--/page-header-->
<div class="row-fluid">
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-block alert-message alert-error">
            <button type="button" class="close" data-dismiss="alert"><i class="icon-remove"></i></button>
            <span>
                <i class="icon-remove red"></i>
                @TempData["Error"]
            </span>
        </div>
    }
</div>
<div class="row-fluid">
    <!-- 表单开始-->
    @using (Html.BeginForm("PropertyCreate", "Club", FormMethod.Post, new { id = "propertyFrom", @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <input type="hidden" id="ClubId" name="ClubId" value="@(club.Id)" />
        <div class="control-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label" })
            <div class="controls">
                <span class="input-icon">
                    @Html.EditorFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                    <i class="icon-leaf"></i>
                </span>
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(model => model.Count, new { @class = "control-label" })
            <div class="controls">
                <span class="input-icon">
                    @Html.EditorFor(model => model.Count)
                    @Html.ValidationMessageFor(model => model.Count)
                    <i class="icon-leaf"></i>
                </span>
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(model => model.Price, new { @class = "control-label" })
            <div class="controls">
                <span class="input-icon">
                    @Html.EditorFor(model => model.Price)
                    @Html.ValidationMessageFor(model => model.Price)
                    <i class="icon-leaf"></i>
                </span>
            </div>
        </div>
        <div class="form-actions">
            <button class="btn btn-info btn-small" type="submit"><i class="icon-ok"></i> 提交</button>
            &nbsp; &nbsp;
            <button class="btn btn-small" type="reset"><i class="icon-undo"></i> 重置</button>
            &nbsp; &nbsp;
            <a href="@Url.Action("Property", "Club", new { id = club.Id })" class="btn btn-small btn-purple"><i class="icon-arrow-left"></i> 返回</a>
        </div>
        <div class="hr"></div>
    }
    <div class="space-24ger"></div>
    <!-- PAGE CONTENT ENDS HERE -->
</div><!--/row-->

<div id="ace-settings-container">
    <!--#breadcrumbs皮肤的设置-->
    @Html.Partial("~/Views/Shared/_PageSkin.cshtml")
</div><!--/#ace-settings-container-->

