@model ClubReservation.Models.Club
@{
    ViewBag.Title = "俱乐部编辑";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src="@Url.Content("~/Scripts/pagejs/club.js")"></script>
}

<div class="page-header position-relative">
    <h1>俱乐部管理<small><i class="icon-double-angle-right"></i> 俱乐部编辑</small></h1>
</div><!--/page-header-->
<div class="row-fluid">
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-block alert-message alert-error">
            <button type="button" class="close" data-dismiss="alert"><i class="icon-remove"></i></button>
            <span>
                <i class="icon-remove red"></i>
                @TempData["Error"]
            </span>
        </div>
    }
</div>
<div class="row-fluid">
    <!-- 表单开始-->
    @using (Html.BeginForm("Edit", "Club", FormMethod.Post, new { id = "clubFrom", @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="control-group">
            @Html.LabelFor(model => model.ClubName, new { @class = "control-label" })
            <div class="controls">
                <span class="input-icon">
                    @Html.EditorFor(model => model.ClubName)
                    @Html.ValidationMessageFor(model => model.ClubName)
                    <i class="icon-leaf"></i>
                </span>
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(model => model.Email, new { @class = "control-label" })
            <div class="controls">
                <span class="input-icon">
                    @Html.EditorFor(model => model.Email)
                    @Html.ValidationMessageFor(model => model.Email)
                    <i class="icon-leaf"></i>
                </span>
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(model => model.ClubInfo, new { @class = "control-label" })
            <div class="controls">
                @Html.TextAreaFor(model => model.ClubInfo, new { style = "width:400px", rows = "7" })
                @Html.ValidationMessageFor(model => model.ClubInfo)
            </div>
        </div>
        <div class="form-actions">
            <button class="btn btn-info btn-small" type="submit"><i class="icon-ok"></i> 提交</button>
            &nbsp; &nbsp;
            <button class="btn btn-small" type="reset"><i class="icon-undo"></i> 重置</button>
            &nbsp; &nbsp;
            <a href="@Url.Action("Index", "Club")" class="btn btn-purple btn-small"><i class="icon-arrow-left"></i> 返回</a>
        </div>
        <div class="hr"></div>
    }
    <div class="space-24ger"></div>
    <!-- PAGE CONTENT ENDS HERE -->
</div><!--/row-->

<div id="ace-settings-container">
    <!--#breadcrumbs皮肤的设置-->
    @Html.Partial("~/Views/Shared/_PageSkin.cshtml")
</div><!--/#ace-settings-container-->
