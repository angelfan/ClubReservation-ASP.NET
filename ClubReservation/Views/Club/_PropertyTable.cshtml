@model IEnumerable<ClubReservation.Models.Property>
@{ int i = 1;}
<table id="table_property" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="center num">序号</th>
            <th class="name">@Html.DisplayNameFor(model => model.Name)</th>
            <th class="count">@Html.DisplayNameFor(model => model.Count)</th>
            <th class="price">@Html.DisplayNameFor(model => model.Price)</th>
            <th class="updatedate">@Html.DisplayNameFor(model => model.UpdateDate)</th>
            <th class="center opertae">操作</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td class="center">@(i++)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Count)</td>
                    <td>@(item.Price.ToString("F2"))</td>
                    <td>@(item.UpdateDate.ToString("yyyy-MM-dd"))</td>
                    <td class="center">
                        <div class="inline position-relative">
                            <button class="btn btn-minier btn-primary dropdown-toggle" data-toggle="dropdown"><i class="icon-cog icon-only"></i>&nbsp;选择</button>
                            <ul class="dropdown-menu dropdown-icon-only dropdown-light pull-right dropdown-caret dropdown-close">
                                <li>
                                    <a href="@Url.Action("PropertyDetails", "Club", new { id = item.Id })" class="tooltip-warning" data-rel="tooltip"
                                       title="详细" data-placement="left"><span class="blue"><i class="icon-user-md"></i></span>详细</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("PropertyEdit", "Club", new { id = item.Id })" class="tooltip-success" data-rel="tooltip"
                                       title="编辑" data-placement="left"><span class="green"><i class="icon-edit"></i></span>编辑</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("PropertyDelete", "Club")" value="@(item.Id)" class="tooltip-error delete-property" data-rel="tooltip"
                                       title="删除" data-placement="left"><span class="red"><i class="icon-trash "></i></span>删除</a>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
