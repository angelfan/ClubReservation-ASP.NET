@model ClubReservation.Models.Login
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="description" content="overview & stats" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>登录</title>
    <!-- basic styles -->
    <link href="@Url.Content("~/Content/css/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/css/bootstrap-responsive.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/css/font-awesome.min.css")" rel="stylesheet" />
    <!-- ace styles -->
    <link href="@Url.Content("~/Content/css/ace.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/css/ace-responsive.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/pagecss/style.css")" rel="stylesheet" />
</head>
<body style="background-image: url(@Url.Content("~/Images/blue-background-6.jpg)")" class="login-layout">
    <div class="container-fluid" id="main-container">
        <div id="main-content">
            <div class="row-fluid" style="padding: 100px  0 0 0; ">
                <div class="span12">
                    <div class="login-container">
                        <div class="row-fluid">
                            <div class="center">
                                <h1><span class="white">俱乐部活动预约系统</span></h1>
                            </div>
                        </div>
                        <div class="space-6"></div>
                        <div class="row-fluid">
                            <div class="position-relative">
                                <div id="login-box" class="visible no-border">
                                    <div class="widget-body">
                                        <div class="widget-main">
                                            <h4 class="header lighter bigger"><i class="icon-coffee green"></i>登录</h4>
                                            <div class="space-6"></div>
                                            @using (Html.BeginForm("Login", "User", FormMethod.Post, new { id = "loginFrom"}))
                                            { 
                                                @Html.AntiForgeryToken()
                                                @Html.ValidationSummary(true)
                                                if (TempData["Error"] != null)
                                                {
                                                    <label><span class="field-validation-valid field-validation-valid">@TempData["Error"]</span></label>
                                                }
                                                 <label>
                                                    <span class="block input-icon input-icon-right">
                                                        @Html.TextBoxFor(model => model.EmployeeCode, new { placeholder = "用户名",@class="span12" })
                                                        <i class="icon-user"></i>
                                                    </span>
                                                </label>
                                                <label class="validation-error-message">
                                                    @Html.ValidationMessageFor(model => model.EmployeeCode)
                                                </label>
                                                <label>
                                                    <span class="block input-icon input-icon-right">
                                                        @Html.PasswordFor(model => model.Password, new { placeholder = "密码", @class = "span12" })
                                                        <i class="icon-lock"></i>
                                                    </span>
                                                </label>
                                                <label class="validation-error-message">
                                                    @Html.ValidationMessageFor(model => model.Password)
                                                </label>
                                                <div class="space"></div>
                                                <div class="row-fluid" style="margin-left:170px;">
                                                    <button type="submit" class="span3 btn btn-small btn-primary"><i class="icon-key"></i> 登陆</button>
                                                    <button type="reset" class="span3 btn btn-small"><i class="icon-refresh"></i>重置</button>
                                                </div>
                                            }
                                        </div><!--/widget-main-->
                                        <div class="toolbar clearfix">
                                            <div>
                                                <a href="#" onclick="show_box('forgot-box'); return false;" class="forgot-password-link"><i class="icon-arrow-left"></i> 忘记密码？</a>
                                            </div>
                                        </div>
                                    </div><!--/widget-body-->
                                </div><!--/login-box-->
                                <div id="forgot-box" class="widget-box no-border">
                                    <div class="widget-body">
                                        <div class="widget-main">
                                            <h4 class="header red lighter bigger"><i class="icon-key"></i> 找回密码</h4>
                                            <div class="space-6"></div>
                                            <p>
                                                请联系管理员重置密码
                                            </p>
                                        </div><!--/widget-main-->
                                        <div class="toolbar center">
                                            <a href="#" onclick="show_box('login-box'); return false;" class="back-to-login-link">返回<i class="icon-arrow-right"></i></a>
                                        </div>
                                    </div><!--/widget-body-->
                                </div><!--/forgot-box-->
                            </div><!--/position-relative-->
                        </div>
                        <div class="center" style="margin-top:250px;" ><span style="padding-top:300px;">Copyright 2014 南京富士通南大江阴分公司 演习开发team2   </span></div>
                        
                    </div>
                </div><!--/span-->
            </div><!--/row-->
        </div>
    </div><!--/.fluid-container-->
    <!-- basic scripts -->
    <!-- basic scripts -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")

    <script src="@Url.Content("~/Scripts/js/jquery.min.js")"></script>
    <script src="@Url.Content("~/Scripts/js/bootbox.min.js")"></script>
    <script src="@Url.Content("~/Scripts/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/js/jquery-ui-1.10.2.custom.min.js")"></script>
    <script src="@Url.Content("~/Scripts/js/jquery.ui.touch-punch.min.js")"></script>
    <script src="@Url.Content("~/Scripts/js/jquery.sparkline.min.js")"></script>

    <script src="@Url.Content("~/Scripts/js/ace-elements.min.js")"></script>
    <script src="@Url.Content("~/Scripts/js/ace.min.js")"></script>

    <script src="@Url.Content("~/Scripts/pagejs/user.js")"></script>
    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>
