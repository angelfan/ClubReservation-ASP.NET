@model IEnumerable<ClubReservation.Models.User>
@{int i = 1;}
<table id="table_report" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="center num">序号</th>
            <th class="employeeCode">@Html.DisplayNameFor(model => model.EmployeeCode)</th>
            <th class="name">@Html.DisplayNameFor(model => model.Name)</th>
            <th class="sex">@Html.DisplayNameFor(model => model.Sex)</th>
            <th class="email">@Html.DisplayNameFor(model => model.Email)</th>
            <th class="team">@Html.DisplayNameFor(model => model.Team)</th>
            <th class="tel">@Html.DisplayNameFor(model => model.Tel)</th>
            <th class="center opertae">操作</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td class='center'>@(i++)</td>
                    <td>@Html.DisplayFor(modelItem => item.EmployeeCode)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>
                        @if (item.Sex == 0)
                        {
                            <text>男</text>
                        }
                        else if (item.Sex == 1)
                        {
                            <text>女</text>
                        }
                    </td>
                    <td>@Html.DisplayTextFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Team)</td>
                    <td>@Html.DisplayFor(modelItem => item.Tel)</td>
                    <td class="center">
                        <div class="inline position-relative">
                            <button class="btn btn-minier btn-primary dropdown-toggle" data-toggle="dropdown"><i class="icon-cog icon-only"></i>&nbsp;选择</button>
                            <ul class="dropdown-menu dropdown-icon-only dropdown-light pull-right dropdown-caret dropdown-close">
                                <li>
                                    <a href="@Url.Action("Details", new { id = item.Id })" class="tooltip-warning"
                                       data-rel="tooltip" title="详细" data-placement="left"><span class="blue"><i class="icon-user-md"></i></span>详细</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Edit", new { id = item.Id })" class="tooltip-success"
                                       data-rel="tooltip" title="编辑" data-placement="left"><span class="green"><i class="icon-edit"></i></span>编辑</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Delete", "User")" value="@item.Id" class="tooltip-error delete-user"
                                       data-rel="tooltip" title="删除" data-placement="left"><span class="red"><i class="icon-trash"></i></span>删除</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("ResetPassword", "User")" value="@item.Id"
                                       class="tooltip-error reset-password" data-rel="tooltip" title="重置密码" data-placement="left">
                                        <span class="green"><i class="icon-undo"></i></span>重置密码
                                    </a>
                                </li>
                                <li>
                                    <a href="#myModal" ahref="@Url.Action("GetUserPowers", "User")" value="@item.Id"
                                       class="tooltip-warning get_user_power" data-toggle="modal" data-rel="tooltip" title="权限设置" data-placement="left">
                                        <span class="blue"><i class="icon-flag"></i></span>权限设置
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>